# CoreMind System Bot - environment example
NODE_ENV=development
PORT=3000

# Enable adapters (true/false)
ENABLE_WHATSAPP=true
ENABLE_TELEGRAM=true
ENABLE_DISCORD=true
ENABLE_WEB=true

# WhatsApp (Baileys) session path relative to project root
WHATSAPP_SESSION_PATH=./sessions/whatsapp

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Discord
DISCORD_BOT_TOKEN=your-discord-bot-token

# General
OWNER_NUMBER=+53XXXXXXXXX
PREFIX=!
